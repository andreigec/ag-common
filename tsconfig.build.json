{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "checkJs": false,
    "sourceMap": false,
    "allowJs": true,
    "isolatedModules": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "unknownProperties": "error"
        }
      }
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom.iterable"
    ],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "stories"
  ]
}